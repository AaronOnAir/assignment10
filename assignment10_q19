package day25_assisgnment10;

public class assignment10_q19 {

	public static void main(String[] args) {

/*
 
Question-19

Return the number of times that
the string "java" appears anywhere
in the given string word.

Sample Output:

     input: javaxjava
     output: 2

     input: javaxjavaapplepearjavaegg
     output: 3

 */
		
		String str = "javaxjavaapplepearjavaegg";
		int count = 0;
		
		for(int i = 0; i<=str.length()-4; i++) {
			
			if(str.substring(i, i+4).equals("java")) {
				
				count++;
			}
	
		}
		
		System.out.println(count);
		
	}

}
