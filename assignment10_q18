package day25_assisgnment10;

public class assignment10_q18 {

	public static void main(String[] args) {

/*
Question-18

Given two strings, word and a separator sep,
return a big string made of count occurrences of the word,
separated by the separator string.

Sample Output:

     input: Word
     input: X
     input: 3
     output: WordXWordXWord

     input: This
     input: And
     input: 2
     output: ThisAndThis

     input: This
     input: And
     input: 1
     output: This
 */
		
		String str1="Word";
		String str2="X";
   	 	String str3 = "";
   	 	int count = 3;
		
        for (int i=1; i<=count;i++) {
        
    	str3 = str3 + str1.concat(str2);
	}
        
       
		System.out.println(str3.substring(0,str3.length()-str2.length()));

}
	
	}
